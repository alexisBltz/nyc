---
// ContactForm.astro
---

<section class="max-w-2xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">Leave Us Your Info</h2>
    </div>

    <form class="space-y-6" onsubmit="handleSubmit(event)">
        <div>
            <label for="fullName" class="block text-sm text-gray-600 mb-2">
                Your Full Name ( Required)
            </label>
            <input
                    type="text"
                    id="fullName"
                    name="fullName"
                    required
                    class="w-full px-4 py-3 rounded-md bg-gray-50 border border-gray-200 focus:bg-white focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent transition-colors"
            />
        </div>

        <div>
            <label for="email" class="block text-sm text-gray-600 mb-2">
                Your Email ( Required)
            </label>
            <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 rounded-md bg-gray-50 border border-gray-200 focus:bg-white focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent transition-colors"
            />
        </div>

        <div>
            <label for="subject" class="block text-sm text-gray-600 mb-2">
                Subject
            </label>
            <input
                    type="text"
                    id="subject"
                    name="subject"
                    class="w-full px-4 py-3 rounded-md bg-gray-50 border border-gray-200 focus:bg-white focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent transition-colors"
            />
        </div>

        <div>
            <label for="message" class="block text-sm text-gray-600 mb-2">
                Your Message
            </label>
            <textarea
                    id="message"
                    name="message"
                    rows="6"
                    class="w-full px-4 py-3 rounded-md bg-gray-50 border border-gray-200 focus:bg-white focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent transition-colors resize-none"
            ></textarea>
        </div>

        <div>
            <button
                    type="submit"
                    class="w-auto px-6 py-3 bg-yellow-400 text-gray-900 font-medium rounded-md hover:bg-yellow-500 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2 transition-colors"
            >
                SEND MESSAGE
            </button>
        </div>
    </form>
</section>

