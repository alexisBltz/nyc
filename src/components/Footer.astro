---
// Footer.astro
import { FaFacebook, FaInstagram, FaTiktok, FaLinkedin } from "react-icons/fa";
---
<footer class="bg-gray-800 text-white py-12 px-4">
    <div class="container mx-auto max-w-6xl">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Logo y Copyright -->
            <div class="md:col-span-1">
                <div class="flex items-center mb-4">
                    <div class="bg-yellow-400 p-2 rounded-md mr-2">
                        <span class="text-gray-800 font-bold text-xl">N</span>
                    </div>
                    <span class="text-gray-300 text-2xl">NyC</span>
                </div>
                <p class="text-gray-400 text-sm mb-4">
                    Copyright © 2025<br>
                    Todos los derechos reservados
                </p>
                <div class="flex space-x-4 mt-6">
                    <a href="#" class="text-white text-2xl hover:text-blue-500">
                        <FaFacebook />
                    </a>
                    <a href="#" class="text-white text-2xl hover:text-pink-500">
                        <FaInstagram />
                    </a>
                    <a href="#" class="text-white text-2xl hover:text-black">
                        <FaTiktok />
                    </a>
                    <a href="#" class="text-white text-2xl hover:text-blue-700">
                        <FaLinkedin />
                    </a>
                </div>
            </div>

            <!-- Company -->
            <div class="md:col-span-1">
                <h3 class="text-lg font-semibold mb-4">Company</h3>
                <ul class="space-y-2">
                    <li><a href="#" class="text-gray-400 hover:text-white">Sobre nosotros</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Servicios</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Contactanos</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Testimonios</a></li>
                </ul>
            </div>

            <!-- Support -->
            <div class="md:col-span-1">
                <h3 class="text-lg font-semibold mb-4">Support</h3>
                <ul class="space-y-2">
                    <li><a href="#" class="text-gray-400 hover:text-white">Help center</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Términos y condiciones</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Legal</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Políticas de privacidad</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Estado</a></li>
                </ul>
            </div>

            <!-- Stay up to date -->
            <div class="md:col-span-1">
                <h3 class="text-lg font-semibold mb-4">Mantengase actualizado</h3>
                <div class="flex">
                    <input
                            type="email"
                            placeholder="Tu correo electrónico"
                            class="bg-gray-700 text-white px-4 py-2 rounded-l-md w-full focus:outline-none focus:ring-2 focus:ring-yellow-400"
                    >
                    <button class="bg-gray-600 px-3 py-2 rounded-r-md hover:bg-gray-500 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</footer>